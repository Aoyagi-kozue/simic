
<div class=”form-group”>
  <%= form_tag(search_comics_path, method: :'get') do %>
    <%= text_field_tag :search, "", placeholder: "タイトルで検索", :size=>"30" %>
    <span class="form-group-btn">
      <%= button_tag '<i class="fa fa-search"></i>'.html_safe, type: 'submit', :name => nil %>
    </span>
  <% end %>
</div>
