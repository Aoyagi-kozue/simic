<p id="notice"><%= notice %></p>

<h1>Comic Tags</h1>

<table>
  <thead>
    <tr>
      <th>Comic</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comic_tags.each do |comic_tag| %>
      <tr>
        <td><%= comic_tag.comic_id %></td>
        <td><%= comic_tag.tag_id %></td>
        <td><%= link_to 'Show', comic_tag %></td>
        <td><%= link_to 'Edit', edit_comic_tag_path(comic_tag) %></td>
        <td><%= link_to 'Destroy', comic_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

